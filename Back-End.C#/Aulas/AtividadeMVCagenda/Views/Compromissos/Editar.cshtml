@model AulaMVC2._1.Models.Compromissos
@{
    ViewData["title"] = "Editar";
}

<h1>@ViewData["title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descricão" class="control-label"></label>
                <input asp-for="Descricão" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input type="datetime-local" asp-for="Data" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Contato" class="control-label"></label>
                <select asp-for="Contato.Id" asp-items="@ViewBag.contatos" class="form-control"></select>
                <span asp-validation-for="Contato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Local" class="control-label"></label>
                <select asp-for="Local.Id" asp-items="@ViewBag.locais" class="form-control"></select>
                <span asp-validation-for="Local" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


